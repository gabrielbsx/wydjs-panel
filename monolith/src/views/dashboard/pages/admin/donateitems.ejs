<div style="display: none;" class="col-md-8 grid-margin stretch-card donate-items">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between border-bottom">
                Adicionar bonificação
            </div>
            <div class="d-flex flex-row row px-4 justify-content-center my-2 bg-dark py-4 text-center">
                <div class="justify-content-center text-center mx-auto">
                    <form method="POST" action="/createdonateitems">
                        <div class="form-group my-1">
                            <select class="form-control" name="id_package" type="text">
                                <option value="1">Name</option>
                            </select>
                        </div>
                        <div class="form-group my-1">
                            <input class="form-control" name="itemname" type="text" placeholder="Nome do item">
                        </div>
                        <div class="form-group my-1">
                            <input class="form-control" name="item_id" type="integer" placeholder="Item index">
                        </div>
                        <div class="form-group my-1">
                            <input class="form-control" name="eff1" type="integer" placeholder="Item efeito 1">
                        </div>
                        <div class="form-group my-1">
                            <input class="form-control" name="effv1" type="integer" placeholder="Item valor de efeito 1">
                        </div>
                        <div class="form-group my-1">
                            <input class="form-control" name="eff2" type="integer" placeholder="Item efeito 2">
                        </div>
                        <div class="form-group my-1">
                            <input class="form-control" name="effv2" type="integer" placeholder="Item valode de efeito 2">
                        </div>
                        <div class="form-group my-1">
                            <input class="form-control" name="eff3" type="integer" placeholder="Item efeito 3">
                        </div>
                        <div class="form-group my-1">
                            <input class="form-control" name="effv3" type="integer" placeholder="Item valor de efeito 3">
                        </div>
                        <div class="form-group mt-3 mb-1">
                            <button type="submit" class="btn btn-primary">
                                Adicionar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
