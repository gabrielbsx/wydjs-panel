<script>
    var pages = ['login', 'register', 'recovery'];
    async function setpage(page) {
        if ($(`#forms > #${page}:visible`).length) {
            $(`#forms > #${page}`).hide('slow');
        } else {
            pages.forEach(async (value) => {
                if (value === page) {
                    $(`#forms > #${value}`).show('slow');
                    return;
                };
                $(`#forms > #${value}`).hide('slow');
            });
        }
    }
    $(document).ready(async () => {

    });
</script>